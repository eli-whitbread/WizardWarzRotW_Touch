<UserControl x:Class="WizardWarzRotW.LivesAndScore"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WizardWarzRotW"
             mc:Ignorable="d" 
             Name="element" d:DesignHeight="64" d:DesignWidth="384">
    <Grid Name="display">
        <StackPanel Orientation="Horizontal">
            <Grid Name="livesGrid" VerticalAlignment="Center" HorizontalAlignment="Left">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition  Width="64" Name="col1" />
                    <ColumnDefinition  Width="64" Name="col2" />
                    <ColumnDefinition  Width="64" Name="col3" />
                    <ColumnDefinition  Width="64" Name="col4" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
            </Grid>

            <Grid Name="scoreGrid" VerticalAlignment="Center" HorizontalAlignment="Right">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition  Width="32" Name="col5" />
                    <ColumnDefinition Width="96" Name="col6"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Label Name="PlayerScore" FontFamily="/WizardWarzRotW;component/Resources/#ArcadeClassic" />
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
